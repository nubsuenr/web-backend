<%- include('../partials/header.ejs') %>
<%- include('../partials/navbar.ejs') %>


<h1 class="heading"> Update Bible Studies Content</h1>
<div class="container">
    <div class="row">
        <div class="col-md-12">
            <div class="add_btn">
                <a href="/biblestudies"><i class="bi bi-bar-chart-fill"></i>Manage Bible Studies Content</a>
            </div>
            <form method="post" action="/upgradebiblestudies/<%- biblestudy._id %>">
                <input type="text" placeholder="title" name="title" value="<%- biblestudy.title %>" />
                <input type="text" placeholder="snippet" name="snippet" value="<%- biblestudy.snippet %>" />
                <input type="text" placeholder="date" name="date" value="<%- biblestudy.date %>" />
                <input type="text" placeholder="Document link" name="link" value="<%- biblestudy.link %>" />
                <button class="btn btn-success">Update</button>
            </form>
        </div>
    </div>
</div>










