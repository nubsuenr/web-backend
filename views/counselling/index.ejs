<%- include('../partials/header.ejs') %>
<%- include('../partials/navbar.ejs') %>
<h1 class="heading">Counselling</h1>
<div class="container">
    <div class="row">
        <div class="col-md-12">
            <div>
                <table>
                    <tr>
                      <th>Full Name</th>
                      <th>Message </th>
                      <th>Viewed </th>
                      <th>Action</th>
                    </tr>
                    <% if (counsellings.length > 0){ %> <% counsellings.forEach(counselling => { %>
                    <tr>
                      <td><%= counselling.fullname %></td>
                      <td><%= counselling.worringmessage %></td>
                      <td><%= counselling.viewed %></td>
                      <td><a href="/viewcounselling/<%- counselling._id %>" style="margin-right:15px; color:blue;"><i class="bi bi-eye-fill"></i></a>
                    </td>
                    </tr>
                    <% }) %> <% } else{ %>
                      <p>There are no  Counselling Messages to be displayed</p>
                    <% } %>
                  </table>
                  
            </div>
        </div>
    </div>
</div>

<%- include('../partials/footer.ejs') %>